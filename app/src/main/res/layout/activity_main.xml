<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".Models.MainActivity">


    <ImageView
        android:src="@drawable/background"
        android:id="@+id/im1"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="000"
        android:textColor="#E7B10A"
        android:textSize="32sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="0dp"
        android:columnCount="3"
        android:rowCount="5">


        <ImageView
            android:id="@+id/meteor00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"

            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/meteor32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            app:srcCompat="@drawable/meteor" />

        <ImageView
            android:id="@+id/spaceship0"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:layout_row="4"
            android:layout_column="0"
            app:srcCompat="@drawable/spaceship" />

        <ImageView
            android:id="@+id/spaceship1"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:layout_row="4"
            android:layout_column="1"
            app:srcCompat="@drawable/spaceship" />

        <ImageView
            android:id="@+id/spaceship2"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:layout_row="4"
            android:layout_column="2"
            app:srcCompat="@drawable/spaceship" />




    </GridLayout>

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/baseline_arrow_circle_left_24"
        android:clickable="true"
        android:onClick="leftClick"
        android:tag="left"
        app:tint="#E7B10A" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="80dp"
        android:layout_height="89dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/baseline_arrow_circle_right_24"
        android:clickable="true"
        android:onClick="rightClick"
        android:tag="right"
        app:tint="#E7B10A" />

</RelativeLayout>
